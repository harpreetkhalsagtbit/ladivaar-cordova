<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.ladivaar" version="1.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ladivaar</name>
    <description>
        An Easy to read Ladivaar Sri Guru Granth Sahib and Nitnem App
    </description>
    <author email="harpreetkhalsagtbit@gmail.com" href="https://github.com/harpreetkhalsagtbit">
        Harpreet Singh
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="res/icons/android/hdpi.png" />
        <icon density="mdpi" src="res/icons/android/mdpi.png" />
        <icon density="xhdpi" src="res/icons/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/icons/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icons/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <engine name="ios" spec="^4.5.4" />
    <engine name="browser" spec="^5.0.1" />
    <engine name="android" spec="^6.3.0" />
</widget>
